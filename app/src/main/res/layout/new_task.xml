<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="346dp"
    android:layout_height="303dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="32dp"

    android:background="@color/e"






    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    // android:background="@drawable/round_bg"

    <TextView
        android:textSize="15dp"
        android:fontFamily="@font/bmhannaair"
        android:id="@+id/tv_des_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="게시글 내용"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText
        android:fontFamily="@font/bmhannaair"
        android:id="@+id/newTaskText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"

        android:backgroundTint="#C1AC95"
        android:inputType="textPersonName"
        android:maxLines="1"

        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/tv_des_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_des_content" />

    <Button
        android:id="@+id/newTaskButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_sign"

        android:fontFamily="@font/bmhannaair"
        android:text="확인"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>